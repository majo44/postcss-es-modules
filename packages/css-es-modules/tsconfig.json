{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "declarationDir": "dist/dist-types",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "rootDir": "src",
        "baseUrl": "src",
        "skipLibCheck": true,
    },
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "include": [
        "src"
    ],
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
