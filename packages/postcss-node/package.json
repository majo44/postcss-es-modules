{
    "name": "postcss-node",
    "version": "2.0.2",
    "description": "Package which allows import of css/scss/lass/.. files under the node.js eg `require('styles.css')`",
    "keywords": [
        "css-in-js",
        "css modules"
    ],
    "bugs": {
        "url": "https://github.com/majo44/postcss-es-modules/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/majo44/postcss-es-modules.git"
    },
    "license": "MIT",
    "author": {
        "name": "Pawe≈Ç Majewski",
        "email": "majo44@gmail.com"
    },
    "sideEffects": false,
    "main": "./index.js",
    "module": "./dist/dist-esm/index.js",
    "types": "./dist/dist-types/index.d.ts",
    "files": [
        "dist",
        "register.js",
        "index.js"
    ],
    "scripts": {
        "api": "api-extractor run --local && api-documenter markdown -i ./temp -o ./temp/api && copyfiles ./temp/api/*.* ../../docs/api -f",
        "api:update": "yarn compile:cjs && yarn api",
        "build": "yarn clean && yarn lint && yarn test:coverage && yarn compile && yarn api",
        "clean": "rimraf dist coverage temp",
        "compile": "yarn compile:cjs && yarn compile:esm",
        "compile:cjs": "tsc --outDir dist/dist-cjs --module CommonJS",
        "compile:esm": "tsc --outDir dist/dist-esm --module ESNext",
        "lint": "eslint ./src/**/*.ts --fix",
        "prepublishOnly": "yarn build",
        "test": "mocha test/**/*.ts src/**/*.ts --timeout 5000",
        "test:coverage": "nyc yarn test",
        "test:watch": "yarn test --watch"
    },
    "eslintConfig": {
        "ignorePatterns": ["*.js"],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "eslint-plugin-tsdoc"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "tsdoc/syntax": "error"
        },
        "overrides": [
            {
                "files": ["*.spec.ts"],
                "rules": {
                    "@typescript-eslint/no-explicit-any": 0
                }
            }
        ]
    },
    "mocha": {
        "require": [
            "ts-node/register"
        ],
        "watchFiles": [
            "test/**/*.ts",
            "src/**/*.ts"
        ]
    },
    "nyc": {
        "all": true,
        "branches": 1,
        "check-coverage": true,
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "functions": 1,
        "include": [
            "src/**/*.ts"
        ],
        "lines": 1,
        "reporter": [
            "text-summary",
            "html",
            "lcovonly"
        ],
        "statements": 1
    },
    "dependencies": {
        "postcss-load-config": "^3.0.1",
        "tslib": "^2.1.0"
    },
    "devDependencies": {
        "postcss-es-modules": "^2.0.2",
        "postcss": "^8.2.13",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/node": "^16.11.26",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.16.0",
        "eslint-plugin-tsdoc": "^0.2.10",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "mock-require": "^3.0.3",
        "@types/mock-require": "^2.0.0"
    },
    "peerDependencies": {
        "postcss": "^8.0.0"
    }
}
